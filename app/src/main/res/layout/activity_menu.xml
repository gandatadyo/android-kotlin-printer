<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MenuActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnMasterCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Customer"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btnMasterProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Barang"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btnCreateInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat Pemesanan"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btnReportTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporan Transaksi"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/btnTestPrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Print" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>